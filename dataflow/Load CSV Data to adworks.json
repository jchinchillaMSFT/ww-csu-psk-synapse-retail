{
	"name": "Load CSV Data to adworks",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "adworksRaw",
						"type": "DatasetReference"
					},
					"name": "CSVSource"
				}
			],
			"sinks": [
				{
					"name": "adworksTable"
				}
			],
			"transformations": [
				{
					"name": "derivedColumn"
				}
			],
			"scriptLines": [
				"parameters{",
				"     param_tableName as string",
				"}",
				"source(output(",
				"          CountryId as short,",
				"          IsoCountryName as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> CSVSource",
				"CSVSource derive(ModifiedUTCTimestamp = currentUTC()) ~> derivedColumn",
				"derivedColumn sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     store: 'synapse',",
				"     databaseType: 'spark',",
				"     format: 'table',",
				"     database: 'default',",
				"     tableName: ($param_tableName),",
				"     recreate:true) ~> adworksTable"
			]
		}
	}
}